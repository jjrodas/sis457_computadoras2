@model WebComputadoras2.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-3">
    <div class="container">
        <div class="row">
            <h1>Detalles del Usuario</h1>

            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombres
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombres)
                    </dd>
                    <dt class="col-sm-2">
                        Apellidos
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Usuario
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Usuario1)
                    </dd>
                    <dt class="col-sm-2">
                        Clave
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Clave)
                    </dd>
                    <dt class="col-sm-2">
                        Teléfono
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de Nacimiento
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </dd>
                    <dt class="col-sm-2">
                        Usuario Registro
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de Registro
                    </dt>
                    <dd class="col-sm-10">
                        @Model.FechaRegistro.ToLongDateString() @Model.FechaRegistro.ToShortTimeString()
                    </dd>
                    <dt class="col-sm-2">
                        Estado
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.Estado == 1 ? "Activo" : "Inactivo")
                    </dd>
                    <dt class="col-sm-2">
                        Rol
                    </dt>
                    <dd class="col-sm-10">
                        @Model.IdRolNavigation.Nombre
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                <a asp-action="Index">Volver atrás</a>
            </div>
        </div>
    </div>
</div>
